# Server Configuration
DEW_AUTH_SERVER_HOST=0.0.0.0
DEW_AUTH_SERVER_PORT=8050
DEW_AUTH_SERVER_TLS_CERT_PATH=./certs/cert.pem
DEW_AUTH_SERVER_TLS_KEY_PATH=./certs/key.pem
DEW_AUTH_SERVER_TEMPLATE_PATH=./server/controllers/templates
DEW_AUTH_SERVER_SHUTDOWN_TIMEOUT=10s

# Database Configuration
DEW_AUTH_DATABASE_URL=postgres://dew_auth:dew_auth_password@db:5432/dew_auth_db?sslmode=disable

# Redis Configuration
DEW_AUTH_REDIS_ADDRESS=redis:6379
DEW_AUTH_REDIS_PASSWORD=
DEW_AUTH_REDIS_DB=0
DEW_AUTH_REDIS_MAX_IDLE_CONNECTIONS=10

# Session Configuration
DEW_AUTH_SESSION_LIFETIME=24h
DEW_AUTH_SESSION_SIGNING_KEY=0123456789ABCDEF0123456789ABCDEF0123456789ABCDEF0123456789ABCDEF
DEW_AUTH_SESSION_ENCRYPTION_KEY=FEDCBA9876543210FEDCBA9876543210FEDCBA9876543210FEDCBA9876543210

# OAuth Configuration
DEW_AUTH_OAUTH_AUTH_CODE_LIFETIME=10m
DEW_AUTH_OAUTH_ACCESS_TOKEN_LIFETIME=1h
DEW_AUTH_OAUTH_REFRESH_TOKEN_LIFETIME=30d

# CORS Configuration
DEW_AUTH_CORS_ALLOW_ORIGINS=*
DEW_AUTH_CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
DEW_AUTH_CORS_ALLOW_HEADERS=Origin,Content-Type,Accept,Authorization
DEW_AUTH_CORS_EXPOSE_HEADERS=Content-Length,Content-Type
DEW_AUTH_CORS_ALLOW_CREDENTIALS=true
DEW_AUTH_CORS_MAX_AGE=86400

# Rate Limiting Configuration
DEW_AUTH_RATE_LIMIT_ENABLED=true
DEW_AUTH_RATE_LIMIT_TOKEN_LIMIT=60
DEW_AUTH_RATE_LIMIT_AUTH_LIMIT=100
DEW_AUTH_RATE_LIMIT_LOGIN_LIMIT=5
DEW_AUTH_RATE_LIMIT_COMMON_LIMIT=75
DEW_AUTH_RATE_LIMIT_WINDOW_SECS=60
DEW_AUTH_RATE_LIMIT_EXEMPTED_IPS=127.0.0.1

# Logging Configuration
DEW_AUTH_LOGGING_LEVEL=info
DEW_AUTH_LOGGING_FORMAT=text
DEW_AUTH_LOGGING_ENABLE_JSON=false

# PostgreSQL Configuration for Docker Compose
POSTGRES_USER=dew_auth
POSTGRES_PASSWORD=dew_auth_password
POSTGRES_DB=dew_auth_db